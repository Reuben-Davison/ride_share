<h1>Create a Passenger </h1>
<%= form_with url: '/passengers', method: :post, local: true do |form|%>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :age %>
  <%= form.text_field :age %>
  <%= form.radio_button :single, "True" %>
  <%= form.label :single, "Passenger is single" %>
  <%= form.radio_button :single, "False" %>
  <%= form.label :single, "Passenger is not single" %>
  <%= form.submit "Create Passenger" %>

<% end %>
